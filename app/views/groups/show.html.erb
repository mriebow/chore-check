<div class="group-details">
  <h1><%= @group.name %></h1>
  <div class="group-platform">
  <% @users.each do |user| %>
    <% if user.id == @group.creator_id%>
      <h4>Group Creator:<%=user.username%></h4>
    <%end%>
  <%end%>
  <h4>Group Members:</h4>
    <% @membership.each do |user| %>
      <li><%= link_to user.username, user_path(user) %></li>
    <% end %>
  </div>
</div>

<h4>Group Chores:</h4>
  <ul>
  <% @chores.each do |chore| %>
    <li><%= link_to chore.task, chore%>:
      <% if chore.status == false %>
        <p> Incomplete </p>
      <%else%>
        <p> Complete </p>
      <%end%>
    </li>
  <%end%>
</ul>


  <% if current_user.id == @group.creator_id %>
    <%= link_to 'Add a Chore', new_chore_path %><br/>
    <%= link_to "Add a Member", edit_group_path(@group) %><br/>
    <%= link_to "Delete Group", @group, method: :delete, data: { confirm: "You sure?" } %>
  <%end%>
